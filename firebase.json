{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions run lint",
      "npm --prefix functions run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "/version",
      "function": "version"
    }, {
      "source": "/screenshot",
      "function": "screenshot"
    }, {
      "source": "/posts",
      "function": "posts"
    }]
  }
}
